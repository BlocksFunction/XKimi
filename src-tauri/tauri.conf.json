{
	"$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
	"productName": "xchatgpt",
	"version": "0.1.0",
	"identifier": "com.tauri.dev",
	"build": {
		"frontendDist": "../dist",
		"devUrl": "http://localhost:5173",
		"beforeDevCommand": "bun dev",
		"beforeBuildCommand": "bun build"
	},
	"app": {
		"windows": [
			{
				"label": "main",
				"visible": false,
				"width": 635,
				"height": 770,
				"resizable": false,
				"fullscreen": false,
				"decorations": false
			},
			{
				"label": "splashscreen",
				"url": "/splashscreen",
				"title": "XChatGPT",
				"width": 780,
				"height": 480,
				"resizable": false,
				"fullscreen": false,
				"decorations": false,
				"center": true,
				"alwaysOnTop": true,
				"transparent": true
			},
			{
				"label": "xespan",
				"url": "/xespan",
				"visible": false,
				"width": 400,
				"height": 211,
				"resizable": false,
				"fullscreen": false,
				"decorations": false
			}
		],

		"security": {
			"csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost",
			"assetProtocol": {
				"enable": true,
				"scope": []
			}
		}
	},
	"bundle": {
		"active": true,
		"targets": "all",
		"icon": [
			"icons/32x32.png",
			"icons/128x128.png",
			"icons/128x128@2x.png",
			"icons/icon.icns",
			"icons/icon.ico"
		]
	}
}
